<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorPickerView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.chinalwb.are.colorpicker.ColorPickerView
        android:id="@+id/rteColorPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        colorPickerView:colorViewHeight="30dp"
        colorPickerView:colorViewWidth="30dp"
        colorPickerView:colorViewMarginLeft="2dp"
        colorPickerView:colorViewMarginRight="2dp"
        colorPickerView:colorViewCheckedType="checkMark"
        colorPickerView:colors="@array/colorPickerColors"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rteEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/at_8"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteFontface"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/fontface"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteBold"
                android:layout_width="37dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:padding="5dp"
                android:background="@drawable/btn_bold" />

            <ImageView
                android:id="@+id/rteItalic"
                android:layout_width="37dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:padding="5dp"
                android:background="@drawable/btn_italic" />

            <ImageView
                android:id="@+id/rteUnderline"
                android:layout_width="37dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:padding="5dp"
                android:background="@drawable/btn_link" />

            <ImageView
                android:id="@+id/rteStrikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/strikethrough"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteHr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/hr"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/rteSubscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/subscript"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteSuperscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/superscript"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/rteBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteListNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/listnumber"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteIndentRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/indentright"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteIndentLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/indentleft"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteAlignLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/alignleft"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteAlignCenter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/aligncenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteAlignRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/alignright"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteAt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/at"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rteFontsize"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:background="@drawable/icon_textsize"
                android:padding="5dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/rteQuote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:background="@drawable/icon_quotes"
                android:padding="5dp" />


            <ImageView
                android:id="@+id/rteFontColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/foregroundcolor"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_insert_link_black_48dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rteListBullet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:background="@drawable/listnumber"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/rteInsertImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="69dp"
                android:background="@drawable/icon_insert_image"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/rteInsertVideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/video"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rteEmojiPanel"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:visibility="gone"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>
</merge>